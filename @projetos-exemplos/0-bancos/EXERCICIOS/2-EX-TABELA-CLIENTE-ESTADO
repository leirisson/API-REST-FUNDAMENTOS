-- Seleção Simples
-- Tabela: clientes (id, nome, cidade, estado)
-- Operação: Liste todos os clientes do Rio de Janeiro (RJ).

CREATE TABLE cliente (
id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
nome TEXT NOT NULL,
cidade TEXT NOT NULL,
estado TEXT NOT NULL
)

