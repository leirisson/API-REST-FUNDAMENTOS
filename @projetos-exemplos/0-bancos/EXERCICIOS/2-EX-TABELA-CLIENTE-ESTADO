-- DELETANDO A TABELA
DROP TABLE cliente

-- EXIBINDO TODOS OS CLIENTES
SELECT * FROM cliente

-- EXIBINDO TODOS OS CLIENTES DO RIO DE JANEIRO
SELECT * FROM cliente WHERE estado = 'RJ'

-- EXIBINDO A QUANTIDADE DE CLIENTES DO ESTADO DO RIO DE JANEIRO
SELECT COUNT(*) AS [QUANTIDADE DE CLIENTES DO RJ] FROM cliente WHERE estado = 'RJ'

-- EXIBINDO O TOTAL DE CLIENTES
SELECT COUNT(*) AS [TOTAL DE CLIENTES] FROM cliente




