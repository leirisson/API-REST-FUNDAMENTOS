generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Medico {
  id String @id @default(uuid())
  nome String
  especialidade String
  crm String @unique

  consultas Consulta[]

  @@map("medicos")
}

model Consulta {
  id String @id @default(uuid())
  paciente String
  data String
  hora String
  medicoId String @map("medico_id")

  medico Medico @relation(fields: [medicoId], references: [id])

  @@map("consultas")
}